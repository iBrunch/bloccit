<div class="media">
  <%= render partial: 'votes/voter', locals: { post: post } %>
  <% if @user != nil %>
      <div class="pull-left">
      <% avatar_url = @user.avatar_url(48) %>
      
      <% if avatar_url %>
        <div class="media-left">
          <%= image_tag post.user.avatar_url(48), class: 'media-object' %>
        </div>
      <% end %>
  </div>
  <% end%>
  
  <div class="media-body">
    <h4 class="media-heading">
      <%= link_to post.title, topic_post_path(post.topic, post) %>
    </h4>
    <small>
      submitted <%= time_ago_in_words(post.created_at) %> ago by <%= link_to post.user.name, user_path(post.user) %> <br>
      <%= post.comments.count %> Comments
    </small>
  </div>
</div>
